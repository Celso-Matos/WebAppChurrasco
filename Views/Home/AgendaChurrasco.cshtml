@model WebAppChurrasco.ViewModel.Churrasco

@{
    ViewData["Title"] = "Agenda Churras";
}

<div class="text-center">
    <div class="row col-12" style="text-align: left;">
        <div class="form-group">
            <a class="btn btn-success" asp-controller="Home" asp-action="NovoChurrasco"><string>Novo Churras</string></a>
        </div>
    </div>
    <br />
    <div class="card border">
        <div class="card-header bg-warning">
            <h3 class="text-white"><strong>Agenda de Churras</strong></h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if(Model.ListaChurras != null)
                {
                    @if (Model.ListaChurras.Any())
                    {
                        <table class="hover" id="tblAgendaChurras" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.IdChurras)</th>
                                    <th>@Html.DisplayNameFor(m => m.DescChurras)</th>
                                    <th>@Html.DisplayNameFor(m => m.ObsAdsChurras)</th>
                                    <th>@Html.DisplayNameFor(m => m.DataChurras)</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListaChurras)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.IdChurras)</td>
                                        <td>@Html.DisplayFor(m => item.DescChurras)</td>
                                        <td>@Html.DisplayFor(m => item.ObsAdsChurras)</td>
                                        <td>@Html.DisplayFor(m => item.DataChurras)</td>
                                        <td>
                                            <a class="btn btn-success" data-toggle="tooltip" title="Gestão de Participantes" href="@Url.Action("AcaoParticipantesChurras","Home", new { id = item.IdChurras })"><i class="bi bi-gear"></i></a>
                                            <a class="btn btn-warning" data-toggle="tooltip" title="Detalhes do Churras" href="@Url.Action("DetalhesAgendaChurras","Home", new { id = item.IdChurras })"><i class="bi bi-info-square"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Não há registro de churrasco no momento</p>
                    }
                }                
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $('#tblAgendaChurras').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "Não existe informações de churrasco",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar  _MENU_  Entradas",
                    "loadingRecords": "Carregando...",
                    "processing": "Processando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sem resultados encontrados",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Último",
                        "next": "Próximo",
                        "previous": "Anterior"
                    }
                }


            });
        });
    </script>

}
